Page {
	background-color: #F4F4F4;
}
.box {
	width: 90%;
	margin: 0 auto;
}
.box-wrap {
	width: 100%;
	height: 100rpx;
	background-color: #F4F4F4;
	position: fixed;
	top: 0;
	left: 0;
}
.box-search {
	width: 90%;
	height: 70rpx;
	margin: 0 auto;
	background-color: #fff;
	margin-top: 20rpx;
	border-radius: 50rpx;
}
.box-search image {
	padding-left: 80rpx;
	padding-top: 20rpx;
	width: 37.2rpx;
	height: 36rpx;
	float: left;
}
.box-search input {
	padding-left: 20rpx;
	padding-top: 10rpx;
	width: 75%;
	display: inline-block;
	float: left;
}
.list-title {
	margin-top: 120rpx;
	border-left: 15rpx solid #49AE7B;
	font-size: 30rpx;
	color: #6C6B70;
}
.list-title text {
	padding-left: 20rpx;
}
.list-plant {
	width: 100%;
}
.list-plant .li {
	width: 47.5%;
	margin-top: 30rpx;
	height: 420rpx;
	background-color: #fff;
	float: left;
}
.lar {
	margin-left: 5%;
}
.list-plant .li image {
	max-width: 92%;
	max-height: 70%;
	display: block;
	margin: 0 auto;
	margin-top: 15rpx;
	border: 1rpx solid #EAEAEA;
}
.list-plant .li text {
	display: block;
	font-size: 25rpx;
	color: #6C6B70;
	margin-top: 10rpx;
	margin-left: 18rpx;
}
.list-plant .li:last-child {
	margin-bottom: 20rpx;
}
.loading-list {
	clear: both;
	margin-top: 40rpx;
	color: silver;
	font-size: 30rpx;
	text-align: center;
	margin-bottom: 25rpx;
}