@import "../../common/wxss/nav.wxss";
@import "../../common/wxss/comWxss.wxss";
@import "../../common/wxss/hpic.wxss";
.body-box {
	width: 100%;
}
.body-head {
	width: 100%;
	border-bottom: 20rpx solid #F7F8FA;
}
.head {
	width: 90%;
	margin: 0 auto;
	height: 190rpx;
}
.head-name {
	width: 70%;
}
.head-name .t1 {
	font-size: 30rpx;
}
.head-name .t2 {
	margin-top: 35rpx;
	font-size: 66rpx;
}
.head-pic {
	width: 30%;
}
.plant-img {
	width: 100%;
	text-align: center;
	height: 480rpx;
}
.plant-img swiper {
	height: 460rpx;
}
.plant-img image{
	width: 100%;
	height: 430rpx;
}
.list-dis {
	width: 100%;
	height: 20rpx;
	background-color: #F7F8FA;
}
.list-mange {
	width: 100%;
	height: 100rpx;
	margin-bottom: 20rpx;
	border-bottom: 1rpx solid silver;
}
.list-mange-info {
	width: 90%;
	height: 100rpx;
	margin: 0 auto;
}
.list-mange-info .t1 {
	line-height: 100rpx;
}
.list-mange-info .t1 image {
	width: 50rpx;
	height: 50rpx;
	vertical-align: middle;
	margin-right: 10rpx;
}
.list-mange-info .t2 {
	line-height: 100rpx;
	color: #1A62BF;
}
.view-pop-wrap {
	position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,.6);
}
.view-pop-qrcode {
	position: fixed;
    z-index: 5000;
    width: 560rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #fff;
    text-align: center;
    border-radius: 3px;
}
.view-pop-qrcode image {
	width: 95%;
	height: 95%;
	margin-top:2.5%;
}
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.75rem;
  align-items: center;
}
.td {
    height: 100%;
    justify-content: center;
    line-height: 2.75rem;
    text-align: center;
}
.bg-g{
  background: #E6F3F9;
}
.bd {
	border-right: 1rpx solid silver;
}
.ht1 {
	width: 30%;
}
.ht2 {
	width: 70%;
	font-size: 30rpx;
	color: silver;
}
