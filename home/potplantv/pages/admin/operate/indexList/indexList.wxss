.view-pop-wrap {
	position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,.6);
}
.view-pop-qrcode {
	position: fixed;
    z-index: 5000;
    width: 500rpx;
    height: 550rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #fff;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}
.view-pop-qrcode image {
	width: 95%;
	height: 95%;
	margin-top:2.5%;
}