.plant-top {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #DCDCDC;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
}
.plant-head {
  width: 90%;
  margin: 0 auto;
}
.plant-build {
  width: 150rpx;
  background: #E1EAF1;
  text-align: center;
  height: 74rpx;
  line-height: 74rpx;
}
.time-picker {
  width: 215rpx;
  height: 70rpx;
  border: 1px solid #A6AFBA;
  line-height: 70rpx;
}
.time-picker .time {
  width: 50rpx;
  height: 40rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  vertical-align:middle
}
.time-picker .cls {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  vertical-align:middle
}
.time-picker text {
  font-size: 26rpx;
  color: #939393;
}
.time-text {
  margin: 0 15rpx 0 15rpx;
  line-height: 70rpx;
}