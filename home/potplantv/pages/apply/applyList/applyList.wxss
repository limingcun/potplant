.box {
	width: 100%;
}
.box-wrap {
	width: 100%;
	position: fixed;
	background-color: #fff;
	z-index: 1;
	top: 0;
	left: 0;
}
.box-head {
	width: 100%;
	height: 70rpx;
	border-bottom: 1rpx solid silver;
	padding-top: 10rpx;
}
.list-title {
	width: 30%;
	margin: 0 auto;
	border-left: 15rpx solid #49AE7B;
	font-size: 30rpx;
	color: #6C6B70;
	padding-left: 15rpx;
	float: left;
	margin-left: 5%;
	margin-top: 10rpx;
}
.list-search {
	float: right;
	width: 45%;
	height: 80%;
	border: 1px solid #585858;
	margin-right: 5%;
	border-radius: 50rpx;
	line-height: 56rpx;
}
.list-search picker{
	width: 70%;
	color: silver;
	margin-left: 20rpx;
	font-size: 30rpx;
}
.list-wrap {
	margin-top: 90rpx;
}
.list-div {
	width: 100%;
	border-bottom: 1rpx solid silver;
}
.list-div .tr {
	width: 90%;
	margin: 0 auto;
	height: 120rpx;
}
.list-div .tr .d1 {
	width: 40%;
	height: 100%;
	float: left;
}
.list-div .tr .d1 text{
	font-size: 25rpx;
	display: block;
}
.list-div .tr .d1 text:first-child {
	margin-top: 30rpx;
}
.list-div .tr .d1 text:last-child {
	color: #9B9B9B;
}
.list-div .tr .d2 {
	width: 15%;
	height: 100%;
	float: left;
}
.list-div .tr .d2 text {
	font-size: 27rpx;
	display: block;
	line-height: 120rpx;
	text-align: center;
}
.dis-text {
	color: #B0B2B1;
}
.check-text {
	color: #49AE7E;
}
.list-div .tr .d3 {
	width: 45%;
	height: 100%;
	float: left;
	line-height: 120rpx;
}
.list-div .tr .d3 switch{
	margin-left:30rpx;
	display: block;
	float: left;
}
.list-div .tr .d3 image {
	display: block;
	margin-top: 40rpx;
}
.list-div .tr .d3 .m1 {
	width: 51rpx;
	height: 52rpx;
	float: left;
	margin-left: 9%;
}
.list-div .tr .d3 .m2 {
	float: right;
	height: 52rpx;
	width: 40.542rpx;
	margin-top: 39rpx;
}
.loading-list {
	clear: both;
	margin-top: 20rpx;
	color: silver;
	font-size: 30rpx;
	text-align: center;
	margin-bottom: 20rpx;
}
.view-pop-wrap {
	position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,.6);
}
.view-pop-qrcode {
	position: fixed;
    z-index: 5000;
    width: 560rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #fff;
    text-align: center;
    border-radius: 3px;
}
.view-pop-qrcode image {
	width: 95%;
	height: 95%;
	margin-top:2.5%;
}
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.75rem;
  align-items: center;
}
.td {
    height: 100%;
    justify-content: center;
    line-height: 2.75rem;
    text-align: center;
}
.bg-g{
  background: #E6F3F9;
}
.bd {
	border-right: 1rpx solid silver;
}
.ht1 {
	width: 30%;
}
.ht2 {
	width: 70%;
	font-size: 30rpx;
	color: silver;
	padding: 0 20rpx;
	overflow: hidden;
	white-space:nowrap;
    text-overflow:ellipsis;
}