Page, view, text, image, button{
	padding: 0;
	margin: 0;
}
Page {
	width: 100%;
	height: 100%;
}
.box {
	width: 100%;
	height: 100%;
}
.box-img {
	width: 100%;
	height: 33%;
}
.box-form {
	width: 80%;
	height: 66%;
	margin: 0 auto;
}
.form-title {
	text-align: center;
	margin-top: 15rpx;
}
.form-div {
	width: 100%;
	height: 65%;
	background-color: #AAE2C3;
	margin-top: 10rpx;
	border: 3rpx solid #15A752;
	border-radius: 20rpx;
}
.form-div .input {
	width: 85%;
	height: 13%;
	background-color: #fff;
	border-radius: 13rpx;
	margin: 0 auto;
	margin-top: 5%; 
}
.form-div .input input {
	padding-left: 30rpx;
	padding-top: 8rpx;
}
.select-picker {
	padding-left: 30rpx;
	padding-top: 8rpx;
	color: #808080;
}
.form-btn {
	width: 100%;
	height: 20%;
	margin-top: 10%;
}
.form-btn button {
	width: 80%;
	height: 50%;
	background-color: #4AAD7D;
	color: #fff;
	border-radius: 50rpx;
	margin: 0 auto;
	line-height: 85rpx;
}